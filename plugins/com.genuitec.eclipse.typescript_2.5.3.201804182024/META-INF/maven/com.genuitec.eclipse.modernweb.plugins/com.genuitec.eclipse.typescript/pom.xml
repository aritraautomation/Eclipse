<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>com.genuitec.eclipse.modernweb.plugins</groupId>
		<artifactId>parent</artifactId>
		<version>1.11.0-SNAPSHOT</version>
	</parent>

	<artifactId>com.genuitec.eclipse.typescript</artifactId>
	<version>2.5.3-SNAPSHOT</version>
	<packaging>eclipse-plugin</packaging>

	<dependencies>
		<dependency>
			<groupId>com.genuitec.eclipse.webclipse</groupId>
			<type>jar</type>
			<version>${angular2-services-version}-SNAPSHOT</version>
			<artifactId>angular2.language-services</artifactId>
			<scope>provided</scope>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>com.genuitec.eclipse.webclipse</groupId>
			<type>jar</type>
			<version>${angular4-services-version}-SNAPSHOT</version>
			<artifactId>angular4.language-services</artifactId>
			<scope>provided</scope>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>com.genuitec.eclipse.webclipse</groupId>
			<type>jar</type>
			<version>${angular5-services-version}-SNAPSHOT</version>
			<artifactId>angular5.language-services</artifactId>
			<scope>provided</scope>
			<optional>true</optional>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.10</version>
				<executions>
					<!-- copy our custom angular stuff to node_modules before running grunt compile script -->
					<execution>
						<id>unpack-pre-build-ts</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>com.genuitec.eclipse.webclipse</groupId>
									<artifactId>angular5.language-services</artifactId>
									<version>${angular5-services-version}-SNAPSHOT</version>
									<type>jar</type>
									<overWrite>true</overWrite>
								</artifactItem>
							</artifactItems>
							<includes>**/*.js,**/*.json,**/*.ts</includes>
							<outputDirectory>node_modules</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
					<!-- add to bin/node_modules our custom angular stuff after running grunt compile script -->
					<execution>
						<id>unpack-post-build-ts</id>
						<phase>process-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>com.genuitec.eclipse.webclipse</groupId>
									<artifactId>angular2.language-services</artifactId>
									<version>${angular2-services-version}-SNAPSHOT</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>bin/angular/${angular2-services-version}/node_modules</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>com.genuitec.eclipse.webclipse</groupId>
									<artifactId>angular4.language-services</artifactId>
									<version>${angular4-services-version}-SNAPSHOT</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>bin/angular/${angular4-services-version}/node_modules</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>com.genuitec.eclipse.webclipse</groupId>
									<artifactId>angular5.language-services</artifactId>
									<version>${angular5-services-version}-SNAPSHOT</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>bin/angular/${angular5-services-version}/node_modules</outputDirectory>
								</artifactItem>
							</artifactItems>
							<includes>**/*.js,**/*.json</includes>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.github.eirslett</groupId>
				<artifactId>frontend-maven-plugin</artifactId>
				<version>${frontend-maven-plugin.version}</version>
				<configuration>
					<installDirectory>target</installDirectory>
					<nodeVersion>v6.9.1</nodeVersion>
					<npmVersion>3.10.10</npmVersion>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>install-node-and-npm</goal>
							<goal>npm</goal>
						</goals>
					</execution>
					<execution>
						<id>Grunt build</id>
						<goals>
							<goal>grunt</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
